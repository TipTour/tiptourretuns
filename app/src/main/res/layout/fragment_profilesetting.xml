<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/general"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center|left"
                android:text="일반"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"

                android:textSize="@dimen/profile_setting_title"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/edit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="top|start"
                    android:text="푸쉬알람"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="@dimen/profile_setting_font" />

                <Switch
                    android:id="@+id/switch_push"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:gravity="right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/edit_title_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.02"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="top|start"
                    android:text="자동 로그인/로그아웃"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="@dimen/profile_setting_font"

                    />

                <Switch
                    android:id="@+id/switch_autologin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:text="고객지원"
                android:textColor="#000000"
                android:textSize="@dimen/profile_setting_title"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <Button
                android:id="@+id/btn_notice"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:gravity="left|center"
                android:text="공지사항"
                android:textColor="#000000"
                android:textSize="@dimen/profile_setting_font" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <Button
                android:id="@+id/btn_customcenter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:gravity="left|center"
                android:text="사용안내"
                android:textColor="#000000"
                android:textSize="@dimen/profile_setting_font" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <TextView
                android:id="@+id/textview_info"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:ems="10"
                android:gravity="left|center"
                android:text="정보"
                android:textColor="#000000"
                android:textSize="@dimen/profile_setting_title"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <Button
                android:id="@+id/btn_termcond"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:gravity="left|center"
                android:text="이용약관"
                android:textColor="#000000"
                android:textSize="@dimen/profile_setting_font" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#19000000" />

            <Button
                android:id="@+id/btn_personalinfo"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:gravity="left|center"
                android:text="에티켓"
                android:textColor="#000000"
                android:textSize="@dimen/profile_setting_font" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>