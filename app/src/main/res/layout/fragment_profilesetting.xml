<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_marginTop="70dp"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"

        android:layout_weight="8">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/general"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="@null"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:gravity="center|left"

            android:text="일반"
            android:ems="10"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@null"
                android:text="푸쉬알람"
                android:ems="10"
                android:gravity="top|start"
                android:textSize="10dp"
                android:layout_weight="1.02"  android:textColor="#000000"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/switch1"
                android:gravity="right"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:weightSum="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_title_account"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@null"
                android:text="자동 로그인/로그아웃"
                android:ems="10"
                android:gravity="top|start"
                android:textSize="10dp"
                android:layout_weight="1.02"  android:textColor="#000000"

                />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch2"
                android:gravity="right"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="고객지원"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="left|center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="공지사항"
            android:textSize="10dp"
            android:background="@null"
            android:gravity="left|center"
            style="?android:attr/borderlessButtonStyle" android:textColor="#000000"
            android:id="@+id/btn_notice" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="사용안내"
            android:textSize="10dp"
            android:background="@null"
            android:gravity="left|center"
            style="?android:attr/borderlessButtonStyle" android:textColor="#000000"

            android:id="@+id/btn_customcenter" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textview_info"
            android:background="@null"
            android:gravity="left|center"
            android:text="정보"
            android:ems="10"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="이용약관"
            android:textSize="10dp"
            android:background="@null"
            android:gravity="left|center"
            style="?android:attr/borderlessButtonStyle" android:textColor="#000000"

            android:id="@+id/btn_termcond" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#19000000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="에티켓"
            android:textSize="10dp"
            android:background="@null"
            android:gravity="left|center"
            style="?android:attr/borderlessButtonStyle" android:textColor="#000000"

            android:id="@+id/btn_personalinfo" />


    </LinearLayout>

</LinearLayout>